@model IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (Model != null && Model.Count() > 0)
{
    @Html.ActionLink("New Movie", "New", "Movies", new { @class = "btn btn-primary" })

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Movie</th>
                <th>Genre</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Id</td>
                    <td>@movie.Name</td>
                    <td>@movie.Genre.Description</td>
                    <td>@Html.ActionLink("Details","Details","Movies", new { id = movie.Id }, null)</td>
                    <td>@Html.ActionLink("Edit", "Edit", "Movies", new { id = movie.Id}, null)</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>We don't have any movies yet.</p>
}

