@model Vidly.Models.Movie

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th colspan="2">Movie Details</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Id</td>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <td>Name</td>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <td>Genre</td>
            <td>@Model.Genre.Description</td>
        </tr>
        <tr>
            <td>Release Date</td>
            <td>@Model.ReleaseDate</td>
        </tr>
        <tr>
            <td>Date Added</td>
            <td>@Model.DateAdded</td>
        </tr>
        <tr>
            <td>Number in Stock</td>
            <td>@Model.NumberInStock</td>
        </tr>
    </tbody>
</table>

