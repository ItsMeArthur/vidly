@model Vidly.Models.Movie

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<ul>
    <li>Genre: @Model.Genre.Description</li>
    @if (Model.ReleaseDate != null)
    {
        <li>Release Date: @Model.ReleaseDate.Value.ToLongDateString()</li>
    }
    @if (Model.DateAdded != null)
    {
        <li>Date Added: @Model.DateAdded.Value.ToLongDateString()</li>
    }
    <li>Number In Stock: @Model.NumberInStock</li>
</ul>

